#include<iostream>
using namespace std;
int main(){
	int n;
	cout<<"Enter number : ";
	cin>>n;
	for(int i = n ; i>0;i--){
		for(int j = n ; j > 1 ; j--){
			if(j<=i)
				cout<<" "<<i;
			else
				cout<<" "<<j;
		}
		cout<<" "<<i;
		for(int j = 2 ; j < n+1 ; j++){
			if(j<=i)
				cout<<" "<<i;
			else
				cout<<" "<<j;
		}
		cout<<endl;
	}
	for(int i = 2 ; i<n+1;i++){
		for(int j = n ; j > 1 ; j--){
			if(j<=i)
				cout<<" "<<i;
			else
				cout<<" "<<j;
		}
		cout<<" "<<i;
		for(int j = 2 ; j < n+1 ; j++){
			if(j<=i)
				cout<<" "<<i;
			else
				cout<<" "<<j;
		}
		cout<<endl;
	}
return 0;
}
